<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_margin="8dp"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/identidad_luz_de_dia_app_04" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editTextPin1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/textos_medios"
            android:background="@drawable/personalized_edit_text"
            android:inputType="numberSigned"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/editTextPin2"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/textos_medios"
            android:background="@drawable/personalized_edit_text"
            android:inputType="numberSigned"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/editTextPin3"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/textos_medios"
            android:background="@drawable/personalized_edit_text"
            android:inputType="numberSigned"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/editTextPin4"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/textos_medios"
            android:background="@drawable/personalized_edit_text"
            android:inputType="numberSigned"
            android:maxLength="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_comenzar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/rojo"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="COMENZAR" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <ImageButton
        android:id="@+id/imgBtnKidsZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"

        app:srcCompat="@drawable/kids_zone" />

</LinearLayout>