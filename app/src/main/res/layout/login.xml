<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/identidad_luz_de_dia_app_03" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:background="@drawable/personalized_edit_text"
        android:gravity="center"
        android:hint="\@gmail"
        android:textColorHint="@color/textos_medios"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:background="@drawable/personalized_edit_text"
        android:gravity="center"
        android:hint="Contraseña"
        android:textColorHint="@color/textos_medios"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_comenzar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/rojo"
        android:textStyle="bold"
        android:text="COMENZAR" />

    <Button
        android:id="@+id/btnRemPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="5dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp"/>
    <Button
        android:id="@+id/btn_registrarte"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/amarillo"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Registrarte" />

    <Button
        android:id="@+id/btn_inicioFB"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/elementos_claros"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Iniciar con Facebook" />


</LinearLayout>